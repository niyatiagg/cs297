<?xml version="1.0" encoding="UTF-8"?>
<!--
  SUMO Routes Configuration for 5G Handover Simulation
  Creates 10 vehicles (UEs) with random routes
-->
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://sumo.dlr.de/xsd/routes_file.xsd">
    <!-- Vehicle types with speed between 10-60 m/s (36-216 km/h) -->
    <vType id="ue" vClass="passenger" maxSpeed="60.00" minGap="2.50" accel="2.60" decel="4.50" sigma="0.5" tau="1.0"/>
    
    <!-- Routes -->
    <route id="r1" edges="e1 e4 e3 e2"/>
    <route id="r2" edges="e2 e1 e4 e3"/>
    <route id="r3" edges="e3 e2 e1 e4"/>
    <route id="r4" edges="e4 e3 e2 e1"/>
    <route id="r5" edges="e1 e4"/>
    <route id="r6" edges="e2 e3"/>
    <route id="r7" edges="e3 e4"/>
    <route id="r8" edges="e4 e1"/>
    <route id="r9" edges="e2 e1"/>
    <route id="r10" edges="e1 e2"/>
    
    <!-- Vehicles (UEs) -->
    <vehicle id="ue0" type="ue" route="r1" depart="0.00" departLane="best" departPos="random" departSpeed="random"/>
    <vehicle id="ue1" type="ue" route="r2" depart="1.00" departLane="best" departPos="random" departSpeed="random"/>
    <vehicle id="ue2" type="ue" route="r3" depart="2.00" departLane="best" departPos="random" departSpeed="random"/>
    <vehicle id="ue3" type="ue" route="r4" depart="3.00" departLane="best" departPos="random" departSpeed="random"/>
    <vehicle id="ue4" type="ue" route="r5" depart="4.00" departLane="best" departPos="random" departSpeed="random"/>
    <vehicle id="ue5" type="ue" route="r6" depart="5.00" departLane="best" departPos="random" departSpeed="random"/>
    <vehicle id="ue6" type="ue" route="r7" depart="6.00" departLane="best" departPos="random" departSpeed="random"/>
    <vehicle id="ue7" type="ue" route="r8" depart="7.00" departLane="best" departPos="random" departSpeed="random"/>
    <vehicle id="ue8" type="ue" route="r9" depart="8.00" departLane="best" departPos="random" departSpeed="random"/>
    <vehicle id="ue9" type="ue" route="r10" depart="9.00" departLane="best" departPos="random" departSpeed="random"/>
</routes>

